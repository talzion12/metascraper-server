{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.codeActionsOnSave.mode": "all",
  "search.exclude": {
    "**/node_modules": true,
    "**/.direnv": true,
    "**/*.heapsnapshot": true
  },
  "typescript.validate.enable": true,
  "npm.autoDetect": "on",
  "npm.enableRunFromFolder": false,
  "npm.exclude": ["**/.direnv/**"],
  "files.exclude": {
    "**/.direnv*": true
  }
}
